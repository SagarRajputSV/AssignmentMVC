@Styles.Render("~/Content/css")
@{
    if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Hello " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        }
    }
    else
    {
<ul class="nav navbar-nav navbar-right" id="RegisterAndLoginButtons">
    @{
        if (Session["User"] == null)
        {
            <li style="margin-right:40px">@Html.ActionLink("Register", "Register", "Account", new { @class = "btn" }, null)</li>
